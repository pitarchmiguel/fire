---
import Layout from '../layouts/Layout.astro';
import '../styles/global.css';
import InfoCircle from '../assets/info-circle.svg';
import InfoRight from '../assets/circle-arrow-right.svg';
---

<Layout>
	<!-- Background image -->
	<div class="w-full h-[220px] bg-amber-100">
		<img src="https://go.nordqr.com/89p92c/ff00b67072u.webp" alt="FireStation" class="w-full h-full object-cover" />
	</div>

	<!-- Title and information -->
	<div class="p-4 mt-2">
		<h1 class="uppercase text-3xl font-extrabold tracking-tighter">firestation</h1>

		<div class="flex justify-between items-center mt-4">
			<div class="flex items-center gap-4">
				<InfoCircle width={32} height={32} />
				<div>
					<p class="font-semibold ">Información</p>
					<span class="text-sm ">Dirección, horario, teléfono</span>
				</div>
			</div>
			<InfoRight width={32} height={32} />
		</div>
	</div>
</Layout>
